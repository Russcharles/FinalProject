@model Dry_Cleaners.ViewModels.NewCustomerViewModel 


@{
    ViewBag.Title = "New";
}

<h2>New Customer</h2>
@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.FirstName)
        @Html.TextBoxFor(m => m.Customer.FirstName, new {@class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.LastName)
        @Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Address)
        @Html.TextBoxFor(m => m.Customer.Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.City)
        @Html.TextBoxFor(m => m.Customer.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.State)
        @Html.TextBoxFor(m => m.Customer.State, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.ZipCode)
        @Html.TextBoxFor(m => m.Customer.ZipCode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.PhoneNumber)
        @Html.TextBoxFor(m => m.Customer.PhoneNumber, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.EmailAddress)
        @Html.TextBoxFor(m => m.Customer.EmailAddress, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.DryCleanerStoresID)
        @Html.DropDownListFor(m => m.Customer.DryCleanerStoresID, new SelectList(Model.DryCleanerStores, "ID", "CompanyName"), "Select Dry Cleaners", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.KioskBuildingID)
        @Html.DropDownListFor(m => m.Customer.KioskBuildingID, new SelectList(Model.KioskLocations, "ID", "KioskBuilding"), "Select Kiosk Building", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipDetailsID)
        @Html.DropDownListFor(m => m.Customer.MembershipDetailsID, new SelectList(Model.MembershipType, "ID", "MembershipDetails"), "Select Membership Plan", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.CreditCardTypeID)
        @Html.DropDownListFor(m => m.Customer.CreditCardTypeID, new SelectList(Model.CreditCardInfo, "ID", "CreditCardType"), "Credit Card Type", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}
